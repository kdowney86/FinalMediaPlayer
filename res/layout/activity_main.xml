<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mediaplayer.MainActivity" 
    android:background="@android:color/black">

    <Button
        android:id="@+id/filesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nowPlayingButton"
        android:layout_alignRight="@+id/nowPlayingButton"
        android:layout_marginBottom="16dp"
        android:background="@drawable/medialist" />

    <Button
        android:id="@+id/nowPlayingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bExit"
        android:layout_centerVertical="true"
        android:background="@drawable/nowplaying" 
        android:onClick="nowPlaying"/>

    <Button
        android:id="@+id/bExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nowPlayingButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/exit"
        android:onClick="exitApp" />

</RelativeLayout>
